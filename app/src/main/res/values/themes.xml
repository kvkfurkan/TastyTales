<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TastyTales" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#390207</item>
        <item name="colorPrimaryVariant">#390207</item>
        <!-- Staus bar color. -->
        <item name="android:statusBarColor" tools:targetApp="l">@color/secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TastyTales" parent="Base.Theme.TastyTales" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brown</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TastyTales</item>

    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>